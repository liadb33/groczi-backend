{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./backend/features/shared/types"],
    "types": ["express"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "baseUrl": "./"
  },
  "include": ["./backend", "./parser"],
  "files": ["./backend/features/shared/types/express.d.ts"]
}